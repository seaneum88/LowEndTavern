                <div class="col-sm-3 padding-bottom">
                    <div id="potatoSkins" name="potatoSkinsModal" class="activate_modal"><img src="~/Content/images/food/potatoskins.jpg" class="cell-img" /></div>
                </div>
            </div>
            <div id="order" class="tab-pane fade">
                <h3 class="tab-cont-header" style="left:28%;">Order History</h3>
                <div class="col-lg-12">
                    <form action="completed.html" onsubmit="orderAgain()" method="get">
                        <fieldset>

                            <fieldset style="border-radius: 15px; box-shadow: 5px 5px 5px #C0C0C0;">
                                <legend> Order Number </legend>
                                <div class="col-sm-3 padding-bottom"></div>
                                <input type="submit" id="order" value="order again">
                                <input type="button" value="clear order" onclick="clearOrder();">
                                <input type="button" value="clear all orders" onclick="clearAllOrder();">
                            </fieldset>

                            <fieldset style="border-radius: 15px; box-shadow: 5px 5px 5px #C0C0C0;">


                                <legend> Bill </legend>


                                <div>No order history has been found</div>
                                <div name="bill"></div>
                                <input type="hidden" id="hiddenBill" name="hiddenBill"><br>
                            </fieldset>

                        </fieldset>
                    </form>
                </div>
            </div>
        </div>

    </div>

</div>
